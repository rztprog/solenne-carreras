<div class="login-container">
  <%= render "shared/flashes" %>
  <div class="login-modal">
    <h2 class="login-title">Connexion</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
      <div class="login-field">
        <%= f.label :email, class: "login-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input"  %>
      </div>

      <div class="login-field">
        <%= f.label :password, class: "login-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "login-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="login-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "login-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Connexion", class: "login-button" %>
      </div>
    <% end %>


      <%= render "devise/shared/links" %>

  </div>
</div>
