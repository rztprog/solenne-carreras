<div class="login-container">
  <%= render "shared/flashes" %>
  <div class="login-modal">
    <h2 class="login-title">S'enregistrer</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="login-field">
        <%= f.label :email, class: "login-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input" %>
      </div>

      <div class="login-field">
        <%= f.label :password, class: "login-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "login-input" %>
      </div>

      <div class="login-field">
        <%= f.label :password_confirmation, class: "login-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "login-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "login-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
